<Window x:Class="практическая_2.Pages.Page_3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:практическая_2.Pages"
        mc:Ignorable="d"
        Title="Page_3" Height="480" Width="800" Icon="/gory_8x862dz213yp.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF3FD"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#482A83">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/icons8-рассвет-над-горами-96.png"/>

            <Label Content="Вариант № 3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Background="#FFBDF3FD" Margin="10" Padding="10,5"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                        VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="btn1" Content="1" FontSize="20" Height="45" Width="45" Click="btn1_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn2" Content="2" FontSize="20" Height="45" Width="45" Click="btn2_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn3" Content="3" FontSize="20" Height="45" Width="45" 
                        Background="#FFB7AFF5" Margin="5,0"/>
                <Button x:Name="btn4" Content="4" FontSize="20" Height="45" Width="45" Click="btn4_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn5" Content="5" FontSize="20" Height="45" Width="45" Click="btn5_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Задание 3" FontSize="20" Margin="20">
            <ScrollViewer>
                <TextBlock TextWrapping="Wrap" Text="Дан целочисленный массив размера N. Определить максимальное количество его одинаковых элементов." 
                         FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" 
                         TextAlignment="Center" Margin="10"/>
            </ScrollViewer>
        </GroupBox>

        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="87.94"/>
                <RowDefinition Height="Auto" MinHeight="39"/>
                <RowDefinition Height="Auto" MinHeight="34"/>
                <RowDefinition Height="Auto" MinHeight="35"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Введите значение N:" FontSize="16" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Height="46" Width="162"/>
            <TextBox x:Name="tbxInput" Grid.Column="1" FontSize="18" Height="30" 
                     VerticalAlignment="Center" Margin="10,0,0,0" Width="120" HorizontalAlignment="Left"/>

            <Label Content="*не больше 20 элементов" FontSize="12" Foreground="Gray" Grid.Column="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Height="32" Width="178" Grid.Row="1"/>

            <Label Content="Массив:" FontSize="16" Grid.Row="3" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Height="38" Width="69" Margin="12,0,0,0"/>
            <Label x:Name="matrix" Grid.Row="3" Background="White" BorderBrush="Gray" BorderThickness="1" 
                     Margin="91,5,0,5" HorizontalAlignment="Left" Width="392" Grid.ColumnSpan="2"/>

            <Button x:Name="btnCount" Content="Вычислить" FontSize="18" Background="#482A83" Foreground="White" 
                    Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="155,5,0,55" 
                    HorizontalAlignment="Left" Click="btnCount_Click" Width="200"/>

            <Label Content="Максимальное количество повторений:" FontSize="16" Grid.Row="4" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="305"/>
            <Label x:Name="MaxNum" Content=" " FontSize="18" Grid.Row="4" Grid.Column="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" 
                   Background="White" Padding="10,5" MinWidth="80" Height="34" Width="80"/>

            <Label Content="Повторяющееся число:" FontSize="16" Grid.Row="5" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Height="36" Width="182"/>
            <Label x:Name="RepitNum" Content=" " FontSize="18" Grid.Row="5" Grid.Column="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" 
                   Background="White" Padding="10,5" MinWidth="80" Height="34" Width="80"/>
        </Grid>
    </Grid>
</Window>