<Window x:Class="практическая_2.Pages.Page_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:практическая_2.Pages"
        mc:Ignorable="d"
        Title="Page_1" Height="480" Width="800" Icon="/gory_8x862dz213yp.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF3FD"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#482A83">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/icons8-рассвет-над-горами-96.png"/>

            <Label Content="Вариант № 3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Background="#FFBDF3FD" Margin="10" Padding="10,5"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                        VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="btn1" Content="1" FontSize="20" Height="45" Width="45" 
                        Background="#FFB7AFF5" Margin="5,0"/>
                <Button x:Name="btn2" Content="2" FontSize="20" Height="45" Width="45" Click="btn2_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn3" Content="3" FontSize="20" Height="45" Width="45" Click="btn3_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn4" Content="4" FontSize="20" Height="45" Width="45" Click="btn4_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn5" Content="5" FontSize="20" Height="45" Width="45" Click="btn5_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Задание 1" FontSize="20" Margin="20">
            <ScrollViewer>
                <TextBlock TextWrapping="Wrap" Text="Определите количество повторений каждой из цифр 0,1,2...9 в числе N^N, где N меньше либо равно 1000. &#xA;&#xA;*это данные по условию задачи, однако вывести значение большее 16^16 не получится" 
                         FontSize="16" HorizontalAlignment="Left" TextAlignment="Left" Margin="10"/>
            </ScrollViewer>
        </GroupBox>

        <Grid Grid.Row="1" Grid.Column="1" Margin="20,20,20,6">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" MinHeight="78.94"/>
                <RowDefinition Height="Auto" MinHeight="0.06"/>
                <RowDefinition Height="Auto" MinHeight="243"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Введите значение N:" FontSize="18" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" Width="181"/>

            <TextBox x:Name="tbxInput" Grid.Row="0" Grid.Column="1" FontSize="18" 
                     VerticalAlignment="Top" Margin="91,14,91,0" Height="25"/>

            <Button x:Name="btnCount" Content="Вычислить" FontSize="18" Background="#482A83" Foreground="White" 
                    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="142,11,0,40" 
                    HorizontalAlignment="Left" Click="btnCount_Click" Width="200"/>

            <Label Content="Кол-во повторений каждой цифры в числе" FontSize="16" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="329" Margin="0,48,0,0"/>

            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <Label Content="0: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx0" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <Label Content="1: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx1" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <Label Content="2: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx2" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <Label Content="3: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx3" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,5">
                    <Label Content="4: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx4" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="20,5,0,5">
                    <Label Content="5: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx5" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="20,5,0,5">
                    <Label Content="6: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx6" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="20,5,0,5">
                    <Label Content="7: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx7" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="20,5,0,5">
                    <Label Content="8: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx8" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="20,5,0,5">
                    <Label Content="9: " FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Width="30"/>
                    <TextBox x:Name="tbx9" FontSize="16" Width="80" Height="27" IsEnabled="False" Margin="5,0"/>
                </StackPanel>
            </Grid>

            <Label x:Name="ResultLbl" Content="" FontSize="16" Grid.Row="4" Grid.Column="0"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Transparent" Height="0" Width="10"/>
        </Grid>
    </Grid>
</Window>