<Window x:Class="практическая_2.Pages.Page_5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:практическая_2.Pages"
        mc:Ignorable="d"
        Title="Page_5" Height="480" Width="800" Icon="/gory_8x862dz213yp.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF3FD"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#482A83">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/icons8-рассвет-над-горами-96.png"/>

            <Label Content="Вариант № 3" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Background="#FFBDF3FD" Margin="10" Padding="10,5"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                        VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="btn1" Content="1" FontSize="20" Height="45" Width="45" Click="btn1_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn2" Content="2" FontSize="20" Height="45" Width="45" Click="btn2_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn3" Content="3" FontSize="20" Height="45" Width="45" Click="btn3_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn4" Content="4" FontSize="20" Height="45" Width="45" Click="btn4_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn5" Content="5" FontSize="20" Height="45" Width="45" 
                        Background="#FFB7AFF5" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <GroupBox Grid.Row="1" Grid.Column="0" Header="Задание 5" FontSize="20" Margin="20">
            <ScrollViewer>
                <TextBlock TextWrapping="Wrap" Text="Сгенерировать массив размером M столбцов и N строк, содержащий числа от -10 до 10. Отобразить его пользователю. Отсортировать элементы в нем по возрастанию и по убыванию. Вывести результаты сортировки в двух таблицах. Найти максимальный и минимальный элементы массива." 
                         FontSize="14" HorizontalAlignment="Left" Margin="10,0,0,0" TextAlignment="Left"/>
            </ScrollViewer>
        </GroupBox>

        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="41" />
                <RowDefinition Height="Auto" MinHeight="39.94" />
                <RowDefinition Height="Auto" MinHeight="31" />
                <RowDefinition Height="Auto" MinHeight="32" />
                <RowDefinition Height="Auto" MinHeight="119" />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Введите значение М:" FontSize="16" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Height="41" Width="164"/>

            <TextBox x:Name="InputM" FontSize="16" Grid.Row="0" Grid.Column="1" 
                     VerticalAlignment="Top" Margin="20,13,19,0" Height="26"/>

            <Label Content="Введите значение N:" FontSize="16" Grid.Column="2" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Height="41" Width="162"/>

            <TextBox x:Name="InputN" FontSize="16" Grid.Row="0" Grid.Column="3" 
                     VerticalAlignment="Top" Margin="22,13,21,0" Height="26"/>

            <Label Content="*до 6" FontSize="12" Foreground="Gray" Grid.Row="0" Grid.Column="2" 
                   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,71,29" Height="38" Width="62" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

            <Button x:Name="btnCount" Content="Вычислить" FontSize="18" Background="#482A83" Foreground="White" Grid.Column="0" Grid.ColumnSpan="3" Margin="147,5,0,7" 
                    HorizontalAlignment="Left" Click="btnCount_Click" Width="200" Grid.Row="1"/>

            <Label Content="Сген. массив:" FontSize="16" Grid.Row="3" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Height="54" Width="107" Margin="43,0,0,0"/>

            <TextBlock x:Name="GenMatrix" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                      HorizontalAlignment="Left" VerticalAlignment="Top" 
                      TextWrapping="Wrap" Background="White" Padding="10,5" Height="105" Width="136" Grid.RowSpan="3"/>

            <Label Content="По возрастанию:" FontSize="14" Grid.Row="4" Grid.Column="0" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="135" Margin="0,30,0,0"/>

            <TextBlock x:Name="AscendOrder" Grid.Row="4" Grid.Column="0" 
                      HorizontalAlignment="Left" VerticalAlignment="Top" 
                      TextWrapping="Wrap" Background="White" Padding="10,5" MinWidth="150" MinHeight="60" Height="98" Width="150" Margin="0,74,0,0"/>

            <Label Content="По убыванию:" FontSize="14" Grid.Row="4" Grid.Column="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="115" Margin="0,30,0,0"/>

            <TextBlock x:Name="DescendOrder" Grid.Row="4" Grid.Column="2" 
                      HorizontalAlignment="Left" VerticalAlignment="Top" 
                      TextWrapping="Wrap" Background="White" Padding="10,5" MinWidth="150" MinHeight="60" Height="98" Width="150" Margin="0,74,0,0"/>

            <Label x:Name="Maxim" Content="Максимум:" FontSize="14" Grid.Row="1" Grid.Column="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="38" Width="91" Grid.ColumnSpan="2" Margin="81,0,0,49" Grid.RowSpan="3"/>

            <Label x:Name="Minim" Content="Минимум:" FontSize="14" Grid.Row="3" Grid.Column="2" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Height="44" Width="86" Grid.ColumnSpan="2" Margin="83,0,0,0"/>
            <Label Content="*до 6" FontSize="12" Foreground="Gray" Grid.Row="0" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,78,29" Height="38" Width="86" Grid.RowSpan="2"/>
        </Grid>
    </Grid>
</Window>