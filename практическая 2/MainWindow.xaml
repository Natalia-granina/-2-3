<Window x:Class="практическая_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:практическая_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="432" Width="800" Icon="/gory_8x862dz213yp.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF3FD"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#482A83">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnBack" HorizontalAlignment="Left" Margin="90,10,0,10" Content="Назад" Click="btnBack_Click"/>

            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="/icons8-рассвет-над-горами-96.png"/>

            <Label Content="Вариант № 3" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" 
                   Background="#FFBDF3FD" Margin="356,0,0,0" Padding="10,5"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                        VerticalAlignment="Center" Margin="0,0,10,0">
                <Button x:Name="btn1" Content="1" FontSize="20" Height="45" Width="45" Click="btn1_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn2" Content="2" FontSize="20" Height="45" Width="45" Click="btn2_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn3" Content="3" FontSize="20" Height="45" Width="45" Click="btn3_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn4" Content="4" FontSize="20" Height="45" Width="45" Click="btn4_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
                <Button x:Name="btn5" Content="5" FontSize="20" Height="45" Width="45" Click="btn5_Click" 
                        Background="#FFBDF3FD" Margin="5,0"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Frame x:Name="FrmMain" NavigationUIVisibility="Hidden" ContentRendered="FrmMain_ContentRendered"/>

            <TextBlock x:Name="Welcome" Text="Сейчас Вы находитесь на главной странице. На страницы заданий можете перейти с помощью пронумерованных кнопок сверху." 
                   FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   TextWrapping="Wrap" MaxWidth="600"/>
        </Grid>
    </Grid>
</Window>